  <head>
    <title>All Posts</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <style>
    body{
      background-color: whitesmoke;
    }
  </style>
  <body>
    <% include ./partial/header %>
    <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900 text-center">All Post</h1>
    <section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap -m-4">
      <% for(var i=0; i < posts.length; i++){%>
      <div class="p-4 md:w-1/3">
        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
          <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="<%= posts[i].image %>" alt="blog">
          <div class="p-6 bg-orange-50">
            <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"><%= posts[i].author.name %></h2>
            <h1 class="title-font text-lg font-medium text-gray-900 mb-3"><%= posts[i].title %></h1>
            <p class="leading-relaxed mb-3"><%= posts[i].content %></p>
            <div class="flex items-center flex-wrap ">
              <a class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0" href="/postdetail/<%= posts[i]._id %>">See More
                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    <%}%>
    </div>
  </div>
</section>
