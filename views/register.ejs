<script>
    $("#email").blur(function(){
        if($(this).val() != ""){
        $.ajax("/checkDup",{
            method:"POST",
            data:{email:$(this).val()},
            success: function(result){
                if(result.status){
                    alert("Duplicated Email");
                    $("#email").val("");
                    $("#email").focus();
                }
            }
        })
    }
    })

    $("#btn").click(function(){
      $.ajax("/checkPassword",{
        method:"POST",
        data: {password:$("#password").val()},
        success:function(result){
           if(!result.status){
            alert("Please Enter 1 uppercase,1 lowercase,1 digit and min 8");
            $("#password").val();
            $("#password").focus();
           }else{
            $("#frm").submit();
           }
        }
      })
    })
</script>
